// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "completions": {
        "words_min_length": 0
    },
    "show_edit_predictions": false,
    "ui_font_weight": 400.0,
    "project_panel": {
        "dock": "left"
    },
    "tab_size": 4,
    "agent": {
        "inline_assistant_model": {
            "provider": "openrouter",
            "model": "anthropic/claude-sonnet-4"
        },
        "default_model": {
            "provider": "openrouter",
            "model": "openrouter/auto"
        },
        "model_parameters": []
    },
    "agent_servers": {},
    "theme": {
        "mode": "dark",
        "dark": "Catppuccin FrappÃ©",
        "light": "Catppuccin Latte"
    },
    "vim_mode": true,
    "ui_font_size": 15.0,
    "buffer_font_size": 12.0,
    "buffer_line_height": { "custom": 2 },
    "autosave": "on_focus_change",
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": { "enabled": true }
    },
    "diagnostics": {
        "button": true,
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 4,
            "min_column": 0,
            "max_severity": null
        }
    },
    "languages": {
        "JSONC": { "tab_size": 4 },
        "PHP": {
            "language_servers": ["phptools", "!intelephense", "!phpactor"],
            "formatter": {
                "external": {
                    "command": "bash",
                    "arguments": [
                        "-c",
                        "cat > {buffer_path} && ./vendor/bin/pint --quiet {buffer_path} && cat {buffer_path}"
                    ]
                }
            }
        },
        "Vue.js": {
            "formatter": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--tab-width",
                        "4",
                        "--single-quote",
                        "--no-semi",
                        "--parser",
                        "vue",
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        },
        "Svelte": {
            "formatter": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--tab-width",
                        "4",
                        "--single-quote",
                        "--no-semi",
                        "--parser",
                        "vue",
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        }
    },
    "file_types": {
        "PHP": ["*.php", "_ide_helper.php"],
        "Blade": ["*.blade.php"],
        "Shell Script": [".aliases", ".functions", ".exports"]
    },
    "preferred_line_length": 120,
    "tab_bar": { "show": false, "show_nav_history_buttons": false },
    "vim": {
        "toggle_relative_line_numbers": true
    },
    "helix_mode": false,
    "lsp": {
        "phptools": {
            "initialization_options": {
            }
        }
    }
}
