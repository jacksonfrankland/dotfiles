// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
    {
        "context": "vim_mode == normal || vim_mode == visual",
        "bindings": {
            "U": "vim::Redo",
            "space e": "pane::RevealInProjectPanel",
            "space k": "editor::Hover",
            "space a": "editor::ToggleCodeActions",
            "space r": "editor::Rename",
            "space d": "diagnostics::Deploy",
            "space p": "projects::OpenRecent",
            "space f": "file_finder::Toggle",
            "space S": "project_symbols::Toggle",
            "space s": "outline::Toggle",
            "space c": "vim::ToggleComments",
            "space =": "editor::Format",
            "space w v": "pane::SplitVertical",
            "space w s": "pane::SplitHorizontal",
            "space w q": "pane::CloseAllItems",
            "space v": "editor::GoToDefinitionSplit",
            "space w right": "workspace::ActivatePaneRight",
            "space w left": "workspace::ActivatePaneLeft",
            "space w up": "workspace::ActivatePaneUp",
            "space w down": "workspace::ActivatePaneDown",
            "space w o": "workspace::CloseInactiveTabsAndPanes",
            "s": "vim::PushSneak",
            "shift-s": "vim::PushSneakBackward",
            "g r": "editor::FindAllReferences",
            "ctrl-d": "editor::HalfPageDown",
            "ctrl-u": "editor::HalfPageUp"
        }
    },
    {
        "context": "vim_mode == insert || vim_mode == visual",
        "bindings": {
            "escape": ["workspace::SendKeystrokes", "escape : w enter"]
        }
    }
]
